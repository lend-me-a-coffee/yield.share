{
  "name": "yield-share",
  "version": "0.0.1",
  "description": "Stake coffee to support your favorite creators",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/index.ts",
    "start": "node ./dist/index.js",
    "lint": "eslint --ext .js,.ts .",
    "postinstall": "prisma generate && npm install --prefix client",
    "prebuild": "npm run build --prefix client",
    "test": "jest",
    "generate": "prisma generate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lend-me-a-coffee/yield.share.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lend-me-a-coffee/yield.share/issues"
  },
  "nodemonConfig": {
    "ignore": [
      "metadata/*"
    ]
  },
  "homepage": "https://github.com/lend-me-a-coffee/yield.share#readme",
  "dependencies": {
    "@prisma/client": "^4.0.0",
    "axios": "^0.27.2",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "ethers": "^5.6.9",
    "express": "^4.18.1",
    "mime": "^3.0.0",
    "nft.storage": "^6.3.0",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.3",
    "@types/mime": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^28.1.1",
    "nodemon": "^2.0.18",
    "prisma": "^4.0.0",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  }
}
