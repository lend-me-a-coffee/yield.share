// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Creator {
  address     String @id @map("_id")
  name        String
  chain       String
  tagline     String
  description String
  photo       String
  links       String[]
}

model Comment {
  address    String @id @map("_id")
  tokenId    Int
  text       String
  author     String?
  amount     Float
  duration   Int
}
